@model Basic.Models.category

@{
    ViewBag.Title = "Danh mục";
    ViewBag.childUrl = "Thêm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-body border-top-primary">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="control-label col-lg-2 cursor-pointer" for="@Html.DisplayNameFor(model => model.name)">Tên sản phẩm</label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.name)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
